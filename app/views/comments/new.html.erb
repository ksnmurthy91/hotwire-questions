<h1>New Comment</h1>

<%= turbo_frame_tag "new_comment", target: "_top" do %>
  <%= form_with(model: [ @comment.commentable, @comment ],
                data: { controller: "reset_form", action: "turbo:submit-end->reset_form#reset" }) do |form| %>
    <div class="field">
      <%= form.rich_text_area :answer %>
      <%= form.submit "Send" %>
    </div>
  <% end %>
<% end %>

<%= link_to 'Back', @comment.commentable %>
