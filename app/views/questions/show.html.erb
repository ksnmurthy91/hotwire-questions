<p id="notice"><%= notice %></p>

<%= turbo_stream_from @question %>

<%= turbo_frame_tag "question" do %>
  <%= render @question %>

  <p>
    <% if current_user == @question.user %>
      <%= link_to 'Edit', edit_question_path(@question) %> |
    <% end %>
    <%= link_to 'Back', questions_path, "data-turbo-frame": "_top" %>
  </p>
<% end %>

<div id="message" class="container">
  <div class="card">
    <%= render @question.comments %>
  </div>
</div>

<%= turbo_frame_tag "new_comment", src: new_question_comment_path(@question), target: "_top" %>
